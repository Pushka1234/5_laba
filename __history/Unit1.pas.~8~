unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes,Graphics,
  Controls,Forms, Dialogs,Grids, StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    Edit1: TEdit;
    Label1: TLabel;
    Edit2: TEdit;
    Label2: TLabel;
    StringGrid1: TStringGrid;
    Edit3: TEdit;
    Label3: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
  Y : array of real;
  N,M : integer; // N - число точек, M - порядок полинома
  C   : array of real;
  X,P   : real;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
var i : integer;
begin
    N:=StrToInt(Edit1.Text);
    M:=StrToInt(Edit2.Text);
    X:=StrToFloat(Edit3.Text);
    SetLength(C,M+1);

    StringGrid1.ColCount:=M+1;
    for i := 0 to M do StringGrid1.Cells[i,1]:=IntToStr(Random(10));
    for i := 0 to M do C[i]:=StrToFloat(StringGrid1.Cells[i,1]);
    for i := 0 to M do StringGrid1.Cells[i,2]:=FloatToStr(C[i]);

    Label4.Caption:='';
    Label5.Caption:=FloatToStr(P);
    // СХЕМА ГОРНЕРА =====================================================
    P:=C[M];
    for i := M-1 downto 0 do P:=P*X+C[i];
    //====================================================================
    Label4.Caption:=FloatToStr(P);

end;

end.
